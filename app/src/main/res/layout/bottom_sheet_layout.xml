<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorOnPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_title_meatball_menu"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imageview_constraint_current_coin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/coin_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/img_two_rand"/>

        <TextView
            android:layout_marginStart="20dp"
            android:id="@+id/textview_coin_title_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coins_coin_name"
            android:textColor="?colorSecondaryVariant"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_constraint_current_coin"
            app:layout_constraintTop_toTopOf="@+id/imageview_constraint_current_coin"/>

        <TextView
            android:id="@+id/textview_coin_sub_title_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coins_coin_country"
            android:layout_margin="20dp"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_constraint_current_coin"
            app:layout_constraintTop_toBottomOf="@+id/textview_coin_title_constraint"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/bottom_sheet_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:background="@drawable/ic_baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/bottom_sheet_remove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_close"
            android:background="@drawable/img_delete_button"/>

        <TextView
            android:id="@+id/bottom_sheet_remove_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/bottom_sheet_remove"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_remove"
            app:layout_constraintStart_toEndOf="@+id/bottom_sheet_remove"
            app:layout_constraintTop_toTopOf="@+id/bottom_sheet_remove" />

        <ImageButton
            android:id="@+id/bottom_sheet_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_remove"
            android:background="@drawable/img_share_button"/>

        <TextView
            android:id="@+id/bottom_sheet_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/bottom_sheet_share"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_share"
            app:layout_constraintStart_toEndOf="@+id/bottom_sheet_share"
            app:layout_constraintTop_toTopOf="@+id/bottom_sheet_share" />

        <ImageButton
            android:id="@+id/bottom_sheet_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_share"
            android:background="@drawable/img_edit_username_button"/>

        <TextView
            android:id="@+id/bottom_sheet_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/bottom_sheet_view"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_view"
            app:layout_constraintStart_toEndOf="@+id/bottom_sheet_view"
            app:layout_constraintTop_toTopOf="@+id/bottom_sheet_view"/>

        <ImageButton
            android:id="@+id/bottom_sheet_collection"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:background="@drawable/ic_collection_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_view" />

        <TextView
            android:id="@+id/bottom_sheet_collection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/bottom_sheet_collection"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_collection"
            app:layout_constraintStart_toEndOf="@+id/bottom_sheet_collection"
            app:layout_constraintTop_toTopOf="@+id/bottom_sheet_collection"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>